<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/decorators">
	<excludes>
		<pattern>/resources/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/META-INF/*</pattern>
	</excludes>

    <decorator name="loginLayout" page="login-layout.jsp">
        <pattern>*/login</pattern>
        <pattern>*/</pattern>
    </decorator>

    <decorator name="profileLayout" page="register-layout.jsp">
        <pattern>*/choose-member</pattern>
        <pattern>*/choose-projects</pattern>
        <pattern>*/student/register</pattern>
        <pattern>*/lecturer/register</pattern>
        <pattern>*/industry/register</pattern>
    </decorator>

    <decorator name="indexLayoutStudent" page="index-layout-student.jsp">
        <pattern>*/student/*</pattern>
    </decorator>

    <decorator name="indexLayoutLecturer" page="index-layout-lecturer.jsp">
        <pattern>*/lecturer/*</pattern>
    </decorator>

    <decorator name="indexLayoutIndustry" page="index-layout-industry.jsp">
        <pattern>*/industry/*</pattern>
    </decorator>

</decorators>

