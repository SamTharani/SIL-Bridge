<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/decorators">
	<excludes>
		<pattern>/resources/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/META-INF/*</pattern>
	</excludes>

    <decorator name="loginLayout" page="login-layout.jsp">
        <pattern>*/login</pattern>
    </decorator>

    <decorator name="profileLayout" page="profile-layout.jsp">
        <pattern>*/choose-member</pattern>
        <pattern>*/student/profile</pattern>
        <pattern>*/lecturer/profile</pattern>
        <pattern>*/industry/profile</pattern>
    </decorator>

    <decorator name="indexLayout" page="index-layout.jsp">
        <pattern>*/student/*</pattern>
    </decorator>

    <decorator name="indexLayoutLecturer" page="index-layout-lecturer.jsp">
        <pattern>*/lecturer/*</pattern>
    </decorator>

</decorators>

